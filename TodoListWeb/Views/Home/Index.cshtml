@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Todos>

<div class="d-flex w-50 mb-2 justify-content-end">
    <a class="btn btn-success" asp-action="Index" asp-controller="Create">Thêm công việc</a>
</div>

<div class="w-50 overflow-y-auto h-50">
    <table class="table table-dark table-hover user-select-none">
        <thead class="position-sticky top-0">
            <tr>
                <th scope="col" class="w-50 align-middle">Việc cần làm</th>
                <th scope="col" class="w-25 align-middle">Trạng thái</th>
                <th scope="col" class="w-25 align-middle">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr class="align-middle">
                    <td>@job.Job</td>
                    <td>
                        @if (job.IsDone)
                        {
                            <span class="badge rounded-pill bg-success">Đã xong</span>
                        }
                        else
                        {
                            <span class="badge rounded-pill bg-danger">Chưa xong</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Index" asp-controller="Update" asp-route-id="@job.Id"><i class="bi bi-pencil-square"></i></a>
                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="@("#deleteJob-" + @job.Id)"><i class="bi bi-trash3-fill"></i></button>
                        @await Html.PartialAsync("_DeletePartialView", job)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
