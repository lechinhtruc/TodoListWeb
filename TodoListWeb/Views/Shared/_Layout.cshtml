<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo List - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoListWeb.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white overflow-hidden">
    <div class="d-flex justify-content-center align-items-center position-absolute z-3 bg-dark bg-opacity-50 loading vw-100 vh-100">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center vh-100 flex-column gap-3 overflow-hidden">
        <h1 class="text-uppercase">Todo List</h1>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const loadingElement = document.querySelector(".loading");
        setTimeout(() => {
            loadingElement.classList.add("visually-hidden")
        }, 500)</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
